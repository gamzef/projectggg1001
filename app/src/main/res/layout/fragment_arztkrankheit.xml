<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/text_arztkrankheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Fügen Sie bitte den Name von dem Teil des Körpers,die weh tut."/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textSize="25dp"
            android:id="@+id/teilname">
        </EditText>
        <TextView
            android:id="@+id/text_arztkrankheit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Fügen Sie bitte den Name von Beschwerden (Schmerz,Blutterguss usw.)"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textSize="25dp"
            android:id="@+id/beschwerdename">
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ergebnis"
            android:layout_gravity="center"
            android:id="@+id/ergebnis"
            android:textSize="25dp"
            android:layout_marginTop="25dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:id="@+id/namearzt">

        </TextView>

    </LinearLayout>

</ScrollView>