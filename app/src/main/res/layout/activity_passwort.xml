<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_gravity="center"
    tools:context=".PasswortActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/layoutPasswordconfirm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktuelles Passwort">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eskipasswort"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword">
        </EditText>
        <Button
            android:id="@+id/bconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Confirm Passwort">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical"
        android:id="@+id/layoutPasswordupdate">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neues Passwort">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yenipasswort"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword">
            <requestFocus />
        </EditText>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbShowPwd"
            android:layout_alignLeft="@+id/etPasswort"
            android:layout_below="@+id/etPasswort"
            android:text="@string/show_pwd">
        </CheckBox>
        <Button
            android:id="@+id/bandern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Passwort Ã¤ndern">

        </Button>
    </LinearLayout>

</LinearLayout>